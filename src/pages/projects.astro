---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import ProjectFilter from '../components/ProjectFilter.jsx';
import projects from '../data/projects.json';
---
<BaseLayout title="Proyek — Muhammad Nurhidayat Gani">
  <Header />
  <main class="max-w-6xl mx-auto px-4 py-16">
    <!-- Page Header with Gradient Background -->
    <section class="mb-16 py-12 px-8 relative overflow-hidden rounded-2xl">
      <div class="absolute inset-0 hero-gradient-bg"></div>
      <div class="absolute inset-0 noise-texture opacity-40"></div>
      <div class="relative z-10">
        <h1 class="text-4xl sm:text-5xl font-bold mb-4 text-gray-50">
          Proyek <span class="gradient-text">Saya</span>
        </h1>
        <p class="text-lg text-gray-400 max-w-2xl">
          Koleksi proyek yang saya kerjakan — dari sistem backend hingga integrasi AI. 
          Setiap proyek dibangun dengan testing ketat dan monitoring real-time.
        </p>
      </div>
    </section>
    
    <!-- Project Filter & Grid -->
    <ProjectFilter client:load projects={projects} />
  </main>
</BaseLayout>
