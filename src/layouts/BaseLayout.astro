      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Muhammad Nurhidayat Gani",
        "jobTitle": "Software Developer",
        "description": "Heavy Equipment Operator transitioned to Software Developer. Specializing in backend systems, AI integration, and automation.",
