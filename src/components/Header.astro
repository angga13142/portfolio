---
const navItems = [
  { href: '/', label: 'Beranda' },
  { href: '/about', label: 'Tentang Saya' },
  { href: '/projects', label: 'Proyek' },
  { href: '/contact', label: 'Kontak' }
];
---
<header class="sticky top-0 z-40 backdrop-blur-md bg-dark-900/80 border-b border-gray-600/30">
  <nav class="max-w-6xl mx-auto flex items-center justify-between px-4 h-16">
    <a href="/" class="font-bold tracking-tight text-xl text-gray-50 hover:text-primary-400 transition-colors">
      MNG
    </a>
    <ul class="flex items-center gap-8 text-sm font-medium">
      {navItems.map(item => (
        <li>
          <a 
            class="text-gray-300 hover:text-primary-400 transition-colors animated-link" 
            href={item.href}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
