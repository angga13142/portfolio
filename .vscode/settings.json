{
  // GitHub Copilot Optimization Settings
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "javascript": true,
    "typescript": true,
    "python": true,
    "json": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.chat.useProjectTemplates": true,
  "github.copilot.referencesUsed": true,
  
  // Editor Settings for Better AI Context
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.snippetSuggestions": "top",
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  
  // Files to include in Copilot context
  "files.associations": {
    ".env.example": "dotenv",
    "copilot-instructions.md": "markdown"
  },
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/coverage": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/dist": true,
    "**/build": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.venv": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/logs": true
  },
  
  // Linting & Formatting
  "eslint.enable": true,
  "eslint.validate": ["javascript", "typescript"],
  "eslint.format.enable": true,
  
  // Code Spell Checker
  "cSpell.enabled": true,
  "cSpell.language": "en",
  "cSpell.enabledFileTypes": {
    "javascript": true,
    "javascriptreact": true,
    "typescript": true,
    "typescriptreact": true,
    "python": true,
    "json": true,
    "jsonc": true,
    "markdown": true,
    "yaml": true,
    "yml": true,
    "html": true,
    "css": true,
    "scss": true
  },
  "cSpell.ignorePaths": [
    "node_modules",
    ".git",
    ".vscode",
    "dist",
    "build",
    "coverage",
    ".next",
    ".nuxt",
    "out",
    "logs",
    "*.log",
    "package-lock.json",
    "yarn.lock",
    "pnpm-lock.yaml",
    "poetry.lock"
  ],
  
  // Common project-specific words (customize per project)
  "cSpell.words": [
    // Add your project-specific terms here
  ],
  "cSpell.ignoreWords": [
    // Add terms to ignore here
  ]
}
